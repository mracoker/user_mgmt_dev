{% extends 'base.html.twig' %}

{% block title %}Welcome {{ app.user.username }}!{% endblock %}

{% block body %}
    <form method="post">

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.username }}, (not {{ app.user.username }} <a href="{{ path('app_logout') }}">Logout</a>)
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">Create User:</h1>
        <p><label for="inputEmail">Email</label>
        <input type="email" value="" name="email" id="inputEmail" class="form-control" required autofocus>
        </p><p>
        <label for="inputRoles">Roles</label>
        <input type="text" value="admin,user" id="inputRoles" class="form-control" required>
        </p><p>
        <label for="inputPassword">Password</label>
        <input type="password" name="password" id="inputPassword" class="form-control" required>
        </p>
        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >
        <button class="btn btn-lg btn-primary" type="submit">Add</button>
    </form>
{% endblock %}
